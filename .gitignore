# -----------------------------------------------------------------------------
# Ignored by Drupal's composer scaffold, but useful for reference:
# @see https://git.drupalcode.org/project/drupal/-/blob/10.1.x/example.gitignore
# -----------------------------------------------------------------------------

# --- Composer-managed directories and core files ---
# These directories contain files managed by Composer and should not be
# committed to the repository.
/vendor/
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/

# composer.lock - Důležité: Tento soubor se nyní verzuje, aby byla zajištěna
# reprodukovatelnost prostředí. Byl odstraněn z původního seznamu ignorovaných.

# --- Drupal's temporary files and user-uploaded content ---
# These files are generated by Drupal or contain user-uploaded data and
# should not be committed.
/web/sites/*/files/
/web/sites/*/private/
/web/sites/simpletest/
/web/assets/ # Common directory for compiled frontend assets. Adjust if your build process requires them to be committed.
/web/sites/*/translations/ # Generated translation files

# --- Configuration files specific to environments or local development ---
# These files contain sensitive information or local overrides and should
# not be committed.
/.env
/web/sites/default/services.local.yml
/web/sites/default/settings.local.php
/web/sites/default/settings.php

# --- IDE and OS specific files ---
# These files are generated by your IDE or operating system and are
# irrelevant for the repository.
.DS_Store
.idea/
.vscode/
*.iml
Thumbs.db
ehthumbs.db
Desktop.ini
*.bak
*.tmp
*~ # Editor backup files (e.g., from Vim, Emacs)
.history/ # VS Code local history

# --- PHP specific ---
.phpcs-cache
.phpunit.result.cache

# --- Drush ---
drush/sites/.checksums

# --- Node.js / Frontend assets (if applicable) ---
# If you are using Node.js for frontend development (e.g., npm, yarn, gulp, webpack),
# these directories and files should generally be ignored.
/node_modules/
/web/themes/custom/*/node_modules/ # If you have node_modules within custom themes
/web/modules/custom/*/node_modules/ # If you have node_modules within custom modules
/dist/ # Common directory for compiled frontend output. Adjust based on your build process.
.sass-cache/
npm-debug.log*
yarn-debug.log*
.eslintcache

# --- Log files and other generated files ---
# General log and temporary files.
*.log
*.sql # Avoid committing database dumps by accident
/tmp/
/temp/

# --- Environment files ---
# These files contain environment-specific configuration and sensitive data.
# They should NEVER be committed to version control.
.env
.env.local
.env.*.local

# Docker volumes and data
.docker/mysql/*
!.docker/mysql/.gitkeep
.docker/mariadb/*
!.docker/mariadb/.gitkeep
