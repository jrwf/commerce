# Docker uživatel a skupina
UID=1000
GID=1000

# Databázové nastavení
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=drupal
MYSQL_USER=drupal_user
MYSQL_PASSWORD=your_secure_drupal_password

# PHP/Xdebug nastavení
XDEBUG_MODE=debug
PHP_IDE_CONFIG=serverName=d11-app

# Porty
APP_PORT=80
DB_PORT=3306
ADMINER_PORT=3000

# Git konfigurace (volitelné - lze nastavit lokálně)
GIT_USER_EMAIL=your.email@example.com
GIT_USER_NAME=Your Name

# Prostředí
APP_ENV=development
